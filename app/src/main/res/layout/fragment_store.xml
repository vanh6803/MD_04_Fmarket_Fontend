<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.profile_screen.history_buy_screen.product_screen.infor_shop.FragmentStore">

    <!-- TODO: Update blank fragment layout -->
  <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <androidx.cardview.widget.CardView
              app:cardCornerRadius="10dp"
              android:elevation="5dp"
              android:layout_marginHorizontal="10dp"
              android:layout_marginVertical="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <ImageView
                  android:scaleType="centerCrop"
                  android:src="@drawable/anhvudep"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"/>
          </androidx.cardview.widget.CardView>
          <GridView
              android:id="@+id/gridStore"
              android:layout_width="match_parent"
              android:layout_height="270dp"
              android:numColumns="1"
              android:overScrollMode="always"
              android:verticalSpacing="10dp">

          </GridView>
          <View
              android:background="@color/color_edittext"
              android:layout_width="match_parent"
              android:layout_height="8dp"/>

          <LinearLayout
              android:paddingHorizontal="10dp"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:layout_weight="1"
                  android:text="Gợi ý cho bạn"
                  android:textStyle="bold"
                  android:textSize="@dimen/font_size_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
              <LinearLayout
                  android:layout_weight="1"
                  android:layout_width="wrap_content"
                  android:layout_height="match_parent">
                  <TextView
                      android:layout_weight="1"
                      android:layout_gravity="center"
                      android:gravity="end"
                      android:textColor="@color/red"
                      android:text="Xem tất cả"
                      android:textStyle="bold"
                      android:textSize="@dimen/font_size_text"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>

                  <ImageView
                      android:layout_marginLeft="10dp"
                      android:layout_gravity="center"
                      android:src="@drawable/a2a"
                      android:layout_width="12dp"
                      android:layout_height="12dp"/>
              </LinearLayout>
          </LinearLayout>

          <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/recyStore"
              app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>
          <androidx.cardview.widget.CardView
              app:cardCornerRadius="10dp"
              android:elevation="5dp"
              android:layout_marginHorizontal="10dp"
              android:layout_marginVertical="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <ImageView
                  android:scaleType="centerCrop"
                  android:src="@drawable/anhvudep"
                  android:layout_width="match_parent"
                  android:layout_height="200dp"/>
          </androidx.cardview.widget.CardView>



      </LinearLayout>
  </androidx.core.widget.NestedScrollView>




</LinearLayout>