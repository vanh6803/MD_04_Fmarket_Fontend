<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/iteamvoucher"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@drawable/iteamgiamgia"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-10dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Giảm 10%"
            android:textColor="@color/white"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="40dp"
            tools:ignore="MissingConstraints" />

        <LinearLayout

            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="110dp"
            tools:layout_editor_absoluteX="100dp"
            tools:layout_editor_absoluteY="5dp"
            tools:ignore="MissingConstraints">
            <TextView
                android:textStyle="bold"
                android:layout_margin="10dp"
              android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tất cả các hình thức thành toán"/>
            <TextView
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn hàng từ 100k"/>
            <TextView
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:textSize="12dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời hạn: Còn 5 ngày"/>
            
        </LinearLayout>

        <TextView
            android:textColor="@color/white"
            android:background="@drawable/custom_btn_luu"
            android:text="Lưu"
            android:textStyle="bold"
            android:textSize="17dp"
            android:gravity="center"
            android:layout_width="80dp"
            android:layout_height="35dp"
            tools:layout_editor_absoluteX="321dp"
            tools:layout_editor_absoluteY="16dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:textStyle="bold"
            android:textSize="13dp"
            android:text="Điều kiện"
            android:layout_width="50dp"
            android:layout_height="50dp"
            tools:layout_editor_absoluteX="345dp"
            tools:layout_editor_absoluteY="55dp"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>