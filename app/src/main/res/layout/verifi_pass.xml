<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="16dp"
    android:layout_height="match_parent"
    tools:ignore="MissingClass">

    <ImageView
        android:id="@+id/backVerify"
        android:layout_marginTop="50dp"
        android:layout_width="25dp"
        android:layout_height="29dp"
        android:src="@drawable/backss" />

    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Mã Xác Minh"
        android:textSize="30dp"
        android:textColor="@color/color_chudao"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:gravity="center"
        android:text="Mã xác minh đã được gửi vào Email của bạn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.chaos.view.PinView
        app:lineColor="@color/transparent"
        app:itemSpacing="30dp"
        android:id="@+id/pin_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:cursorVisible="false"
        android:inputType="number"
        android:itemBackground="#D9D9D9"
        app:cursorColor="@color/black"
        app:hideLineWhenFilled="true"
        app:itemCount="4"
        app:itemHeight="60dp"
        app:itemRadius="8dp"
        app:itemWidth="60dp" />


    <TextView
        android:layout_marginTop="10dp"
        android:textSize="16dp"
        android:textColor="@color/color_chudao"
        android:textStyle="bold"
        android:gravity="center"
        android:text="Gửi lại mã xác minh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnsuccess"
        android:elevation="10dp"
        android:layout_marginTop="40dp"
        android:text="Tiếp tục"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:height="40dp"
        android:background="@drawable/custom_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>