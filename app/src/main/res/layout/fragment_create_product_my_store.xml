<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraint"
    android:background="@color/gray_ground"
    android:orientation="vertical"
    tools:context=".view.my_store.FragmentCreateProductMyStore">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ln"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Create Product"
                android:textStyle="italic"
                android:gravity="center"
                android:background="@color/white"
                android:textFontWeight="@integer/material_motion_duration_medium_2"
                android:textColor="@color/color_chudao"
                android:padding="20dp"
                android:textSize="25dp" />

            <TextView
                android:background="#F6F6F6"
                android:gravity="center_vertical"
                android:text="Loại sản phẩm"
                android:textColor="@color/gray99"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="12dp"
                android:textSize="14dp"/>

            <Spinner
                android:id="@+id/spinnerCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent" />

            <TextView
                android:gravity="center_vertical"
                android:text="Tên sản phẩm"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtNameProduct"
                android:gravity="center_vertical"
                android:hint="Nhập tên sản phẩm"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:gravity="center_vertical"
                android:text="Tình Trạng"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtTinhTrang"
                android:gravity="center_vertical"
                android:hint="Nhập mới hoặc cũ"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:gravity="center_vertical"
                android:text="Mô tả"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtMota"
                android:gravity="center_vertical"
                android:hint="Nhập mô tả"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tvSc"
                android:gravity="center_vertical"
                android:text="Screen"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtSC"
                android:gravity="center_vertical"
                android:hint="Nhập screen"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>


            <TextView
                android:id="@+id/tvCamera"
                android:gravity="center_vertical"
                android:text="Camera"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtCamera"
                android:gravity="center_vertical"
                android:hint="Nhập camera"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tvChipset"
                android:gravity="center_vertical"
                android:text="Chipset"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtChipset"
                android:gravity="center_vertical"
                android:hint="Nhập chipset"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tvCpu"
                android:gravity="center_vertical"
                android:text="Cpu"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtCpu"
                android:gravity="center_vertical"
                android:hint="Nhập cpu"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tvGpu"
                android:gravity="center_vertical"
                android:text="Gpu"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtGpu"
                android:gravity="center_vertical"
                android:hint="Nhập gpu"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tvRam"
                android:gravity="center_vertical"
                android:text="Ram"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtRam"
                android:gravity="center_vertical"
                android:hint="Nhập ram"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tvRom"
                android:gravity="center_vertical"
                android:text="Rom"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtRom"
                android:gravity="center_vertical"
                android:hint="Nhập rom"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:inputType="number"
                android:textSize="18dp"/>


            <TextView
                android:id="@+id/tvHeDieuHanh"
                android:gravity="center_vertical"
                android:text="Hệ Điều Hành"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtHeDieuHanh"
                android:gravity="center_vertical"
                android:hint="Nhập hệ điều hành"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>


            <TextView
                android:id="@+id/tvBattery"
                android:gravity="center_vertical"
                android:text="Battery"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtBatrery"
                android:gravity="center_vertical"
                android:hint="Nhập battery"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tvWeight"
                android:gravity="center_vertical"
                android:text="Weight"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtWeight"
                android:gravity="center_vertical"
                android:hint="Nhập weight"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:padding="12dp"
                android:textSize="18dp"/>


            <TextView
                android:id="@+id/tvConnection"
                android:gravity="center_vertical"
                android:text="Connection"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtConnection"
                android:gravity="center_vertical"
                android:hint="Nhập connection"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tvSpecialFeature"
                android:gravity="center_vertical"
                android:text="SpecialFeature"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtSpecialFeature"
                android:gravity="center_vertical"
                android:hint="Nhập special feature"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:id="@+id/tvManufacturer"
                android:gravity="center_vertical"
                android:text="Manufacturer"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtManufacturer"
                android:gravity="center_vertical"
                android:hint="Nhập manufacturer"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>

            <TextView
                android:gravity="center_vertical"
                android:text="Other"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingHorizontal="12dp"
                android:paddingTop="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14dp"/>

            <EditText
                android:id="@+id/edtOther"
                android:gravity="center_vertical"
                android:hint="Nhập other"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginBottom="10dp"
                android:textSize="18dp"/>
            </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@id/constraint"
        >
        <TextView
            android:id="@+id/btnHuy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_bg_red_cancle"
            android:gravity="center"
            android:text="Hủy"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/constraint"
            app:layout_constraintEnd_toStartOf="@+id/btnLuu"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@+id/constraint"
            app:layout_constraintTop_toTopOf="@+id/ln"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/btnLuu"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/custom_button_rectangular"
            android:gravity="center"
            android:text="Lưu"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/constraint"
            app:layout_constraintEnd_toEndOf="@+id/constraint"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/btnHuy" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
