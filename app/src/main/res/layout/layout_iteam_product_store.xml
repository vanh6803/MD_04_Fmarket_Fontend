<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_marginTop="10dp"
    android:layout_marginHorizontal="4dp"
    android:orientation="vertical"
    android:background="@color/color_edittext"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imgSale"
            android:background="@drawable/custom_img"
            android:src="@drawable/test"
            android:scaleType="centerCrop"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/nameSale"
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Ốp lưng iPhone 14 Pro Spigen Liquid Air màu Deep Purple"
        android:textColor="@color/black"
        android:textSize="@dimen/font_size_text_title_medium"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginVertical="16dp"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:text="420.000 đ"
                android:textColor="@color/red"
                android:textSize="@dimen/font_size_text_title_medium"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textsale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:text="450.000 đ"
                android:textColor="@color/gray69"
                android:textSize="@dimen/font_size_text"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="16dp"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:src="@drawable/sao" />
            <TextView
                android:id="@+id/tvDaBan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã bán: 64"
                android:layout_marginLeft="20dp"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>


</LinearLayout>
</LinearLayout>