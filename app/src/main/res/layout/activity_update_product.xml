<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_ground"
    tools:context=".view.my_store.UpdateProductActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:padding="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/custom_bg_shopping_cart_primary"
                android:padding="5dp"
                android:src="@drawable/backs"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉnh sửa sản phẩm"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/primary"
                android:textSize="25dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:textSize="18dp"
                android:textColor="#013565"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="Chỉnh sửa tùy chọn"/>
            <ImageView
                android:id="@+id/imgCreateOption"
              android:layout_marginHorizontal="10dp"
                android:layout_gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/plus"/>
        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvOptionProduct"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:spanCount="2"
            android:padding="10dp"
            tools:itemCount="2"
            tools:listitem="@layout/layout_iteam_update_option"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="18dp"
            android:textColor="#013565"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:background="@color/white"
            android:text="Chỉnh sửa sản phẩm"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/lnCategory"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Loại sản phẩm"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtNameCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Loại sản phẩm"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:enabled="false"
                    />
                <LinearLayout
                    android:id="@+id/lnName"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Tên sản phẩm"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tên sản phẩm"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnTinhTrang"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Tình Trạng"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtTinhTrang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mới hoặc cũ"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnMota"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Mô tả"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtMota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mô tả sản phẩm"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnSc"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Màn hình"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtSc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Screen"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnCamera"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Máy ảnh"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtCamera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Camera"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnChipset"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Chipset"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtChipset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chipset"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnCpu"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Cpu"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtCpu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Cpu"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnGpu"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Gpu"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtGpu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gpu"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnRam"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Ram"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtRam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ram"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnRom"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Rom"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtRom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rom"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnHeDieuHanh"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Hệ điều hành"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtHeDieuHanh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hệ điều hành"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnBattery"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Pin"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtBatrery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Battery"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnWeight"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Trọng lượng"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Weight"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnConnection"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Kết nối"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtConnection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Connection"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnSpecialFeature"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Tính năng đặc biệt"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtSpecialFeature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="SpecialFeature"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnManufacturer"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Nhà sản xuất"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtManufacturer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Manufacturer"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>
                <LinearLayout
                    android:id="@+id/lnOther"
                    android:background="#F6F6F6"
                    android:layout_width="match_parent"
                    android:paddingHorizontal="12dp"
                    android:layout_height="30dp">
                    <TextView
                        android:textColor="#013565"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="khác"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/edtOther"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Other"
                    android:textSize="15dp"
                    android:padding="12dp"
                    android:background="@color/white"/>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/btnDong"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/custom_bg_red_cancle"
                android:gravity="center"
                android:text="Hủy"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/constraint"
                app:layout_constraintEnd_toStartOf="@+id/btnLuu"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@+id/constraint"
                tools:ignore="NotSibling" />

            <TextView
                android:id="@+id/btnLuu"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/custom_button_rectangular"
                android:gravity="center"
                android:text="Lưu"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/constraint"
                app:layout_constraintEnd_toEndOf="@+id/constraint"
                app:layout_constraintHorizontal_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>