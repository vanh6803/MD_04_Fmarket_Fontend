<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/anhvudep"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@drawable/backkk"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="28dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/custom_layout_store"
            android:src="@drawable/anhstore"




            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="139dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:text="Laptop AZ"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="170dp" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="200dp">

            <ImageView
                android:layout_width="17dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/Vector" />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:text="4.7/5.0  |  38.5k Người theo dõi"
                android:layout_gravity="center"
                android:textSize="12dp"
                android:textStyle="bold"/>


        </LinearLayout>

        <Button
            android:background="@drawable/custom_btn_theodoi"

            android:text="Theo dõi"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="80dp"
            android:layout_height="40dp"
            tools:layout_editor_absoluteX="329dp"
            tools:layout_editor_absoluteY="170dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:background="@drawable/custom_btn_theodoi"
            android:text="Chat"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:layout_height="40dp"
            tools:layout_editor_absoluteX="329dp"
            tools:layout_editor_absoluteY="217dp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="257dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:textStyle="bold"
                android:layout_marginLeft="20dp"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="Shop"
                android:gravity="center"/>
            <TextView
                android:textStyle="bold"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Sản Phẩm"
                android:gravity="center"/>

        </LinearLayout>

        <View
            android:background="@color/color_edittext"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="300dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="380dp"
            android:layout_height="100dp"
            android:background="@drawable/banner2"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="315dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/color_edittext"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="424dp" />

        <androidx.recyclerview.widget.RecyclerView
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/iteam_voucher"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="437dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints" />

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/color_edittext"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-15dp"
            tools:layout_editor_absoluteY="547dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="565dp"
            tools:ignore="MissingConstraints">
            <TextView
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Gợi ý cho bạn"
                android:textStyle="bold"
                android:gravity="center"/>
            <TextView
                android:textColor="@color/red"
                android:layout_marginLeft="180dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Xem tất cả"
                android:textStyle="bold"
                android:gravity="center"/>
            <ImageView
                android:layout_gravity="center"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/a2a"/>

            
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            tools:listitem="@layout/item_product_sale"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="595dp"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>