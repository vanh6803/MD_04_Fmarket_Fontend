<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_ground">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/custom_bg_shopping_cart_primary"
            android:padding="5dp"
            android:src="@drawable/backs"
            app:tint="@color/white" />
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa địa chỉ"
            android:textSize="25dp"
            />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/linearLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:background="#F6F6F6"
                android:gravity="center_vertical"
                android:text="Liên hệ"
                android:textColor="@color/gray99"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginHorizontal="12dp"
                android:textSize="14dp"/>
            <EditText
                android:id="@+id/edtUsername"
                android:gravity="center_vertical"
                android:hint="Họ và tên"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/gray_ground"
                />
            <EditText
                android:id="@+id/edtPhoneNumber"
                android:gravity="center_vertical"
                android:hint="Số điện thoại"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:textSize="18dp"/>
            <TextView
                android:background="#F6F6F6"
                android:gravity="center_vertical"
                android:text="Địa Chỉ"
                android:textColor="@color/gray99"
                android:layout_marginHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="14dp"/>

            <Spinner
                android:id="@+id/spnCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                />

            <Spinner
                android:id="@+id/spnDistrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/transparent"
                />

            <Spinner
                android:id="@+id/spnWard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/transparent"
                />

            <EditText
                android:id="@+id/edtAddress"
                android:gravity="center_vertical"
                android:hint="Tỉnh/Thành phố, Quận/Huyện, Phường/Xã"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:enabled="false"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:textSize="18dp"/>

            <TextView
                android:background="#F6F6F6"
                android:gravity="center_vertical"
                android:text="Cài đặt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/gray99"
                android:layout_marginHorizontal="12dp"
                android:textSize="14dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <EditText
                    android:gravity="center_vertical"
                    android:hint="Đặt làm địa chỉ mặc định"
                    android:layout_width="300dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:background="@null"
                    android:textColor="@color/gray99"
                    android:enabled="false"
                    android:textSize="18dp"/>
                <CheckBox
                    android:id="@+id/chkChooseDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    />
            </LinearLayout>
            <TextView
                android:background="#F6F6F6"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"/>

            <TextView
                android:id="@+id/tvXoaDiaChi"
                android:textColor="@drawable/custom_text_red_press"
                android:textSize="16dp"
                android:padding="15dp"
                android:background="@drawable/custom_bg_white_gray_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Xóa địa chỉ"
                android:gravity="center_horizontal"/>


            <TextView
                android:id="@+id/btnSave"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_button_rectangular"
                android:padding="12dp"
                android:gravity="center"
                android:textSize="18dp"
                android:text="HOÀN THÀNH"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>