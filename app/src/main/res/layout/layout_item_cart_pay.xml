<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_ln_thanhtoan"
    android:padding="10dp"
    android:gravity="center"
    android:layout_marginTop="4dp"
    >

    <ImageView
        android:id="@+id/imgProduct"
        android:background="@drawable/custom_img_sp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/imganhdt"/>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvProductName"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 15 Pro Max (512gb/1TB)"/>

        <TextView
            android:id="@+id/tvNameColor"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textColor="@color/gray99"
            android:text="Màu sắc : Blue"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvPrice"
                android:textSize="15dp"
                android:textColor="@color/red"
                android:text="5.000.000đ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/gray99"
                android:text="Số lượng : x1" />
        </RelativeLayout>
    </LinearLayout>




</LinearLayout>